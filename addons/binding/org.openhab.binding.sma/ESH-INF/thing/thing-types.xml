<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="sma"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- SMA Inverter Thing -->
	<bridge-type id="bridge">
		<label>SMA Inverter Bridge</label>
		<description>Provides a bridge to an SMA inverter plant</description>
<!-- 		<channels>
			<channel id=etoday typeId="etoday"/>
            <channel id=etotal typeId="etotal"/>
            <channel id=totalpac typeId="totalpac"/>
            <channel id=uac1 typeId="uac1"/>
            <channel id=uac2 typeId="uac2"/>
            <channel id=uac3 typeId="uac3"/>
		</channels>
 --><channels>
			<channel typeId="etotal" id="etotal"></channel>
            <channel typeId="uacmax" id="uacmax"></channel>
</channels>
		<config-description>
		  <parameter name="btAddress" type="text">
		      <label>Bluetooth Address</label>
		      <description>Specifies the Bluetooth address (only for main inverter)</description>
		      <default>00:00:00:00:00:00</default>
		  </parameter>
		  <parameter name="userPassword" type="text">
              <label>User Password</label>
              <default>0000</default>
		  </parameter>
		  <parameter name="cycle" type="integer">
		  	<description>Interval in seconds</description>
		  	<default>120</default>
		  	<label>Cycle time</label></parameter>
		  <parameter name="longitude" type="decimal">
		  	<label>Longitude</label></parameter>
		  <parameter name="latitude" type="decimal">
		  	<label>Latitude</label></parameter>
		</config-description>
	</bridge-type>
    <thing-type id="inverter">
        <label>SMA Inverter</label>
        <channels>
        	<channel typeId="etoday" id="etoday"></channel>
            <channel typeId="etotal" id="etotal"></channel>
            <channel typeId="uac1" id="uac1"></channel>
            <channel typeId="uac2" id="uac2"></channel>
            <channel typeId="uac3" id="uac3"></channel>
            <channel typeId="totalpac" id="totalpac"></channel>
            <channel typeId="invtype" id="invtype"></channel>
        </channels>
        <config-description>
	        <parameter name="susyid" type="integer">
		        <label>SUSyID</label>
	        </parameter>
        </config-description>
    </thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="etoday">
		<item-type>Number</item-type>
		<label>EToday</label>
		<description>Prouction today [kWh]</description>
		<state readOnly="true" pattern="%.3f kWh" />
	</channel-type>
    <channel-type id="etotal">
        <item-type>Number</item-type>
        <label>ETotal</label>
        <description>Production total [kWh]</description>
        <state readOnly="true" pattern="%.3f kWh" />
    </channel-type>
    <channel-type id="uac1">
        <item-type>Number</item-type>
        <label>UAC1</label>
        <description>Voltage AC1</description>
        <state readOnly="true" pattern="%.2f V" />
    </channel-type>
    <channel-type id="uac2">
        <item-type>Number</item-type>
        <label>UAC2</label>
        <description>Voltage AC2</description>
        <state readOnly="true" pattern="%.2f V" />
    </channel-type>
    <channel-type id="uac3">
        <item-type>Number</item-type>
        <label>UAC3</label>
        <description>Voltage AC3</description>
        <state readOnly="true" pattern="%.2f V" />
    </channel-type>
    <channel-type id="uacmax">
        <item-type>Number</item-type>
        <label>UACMax</label>
        <description>Voltage AC Max</description>
        <state readOnly="true" pattern="%.2f V" />
    </channel-type>
    <channel-type id="totalpac">
        <item-type>Number</item-type>
        <label>TotalPAC</label>
        <description>Total power AC</description>
        <state readOnly="true" pattern="%.3f kW" />
    </channel-type>
    <channel-type id="invtype">
    	<item-type>String</item-type>
    	<label>InverterType</label>
        <description>Inverter Type</description>
        <state readOnly="true" />
    </channel-type>

</thing:thing-descriptions>
